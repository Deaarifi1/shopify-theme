      <span class="dot1" data-slide="2"></span>
      <span class="dot1" data-slide="3"></span>
    </div>
  </div>
</div>

<style>
  .slideshow-container1 {
    position: relative;
    width: 100%;
    max-width: 100%;
    overflow: hidden;
  }

  .slideshow1 {
    display: flex;
    transition: transform 0.5s ease-in-out;
  }

  .slide1 {
    position: relative;
    min-width: 100%;
    height: 500px;
  }

  .slide1 img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0.7;
  }

  .slide-content1 {
    position: absolute;
    left: 5%;
    top: 50%;
    transform: translateY(-50%);
    color: white;
    text-align: left;
  }

  .subtext1 {
    font-size: 18px;
    color: black;
    max-width: 35%;
    margin-bottom: 2px;
  }

  .header1 {
    font-size: 40px;
    font-weight: bold;
    margin-bottom: 5px;
    max-width: 70%;
  }

  .button1 {
    padding: 10px 20px;
    background-color: #000;
    color: white;
    text-decoration: none;
    border-radius: 6px;
    display: inline-block;
    margin-top: 10px;
    text-align: left;
  }

  .slideshow-dots1 {
    position: absolute;
    bottom: 10px;
    width: 100%;
    text-align: center;
  }

  .slideshow-dots1 .dot1 {
    display: inline-block;
    width: 10px;
    height: 10px;
    margin: 0 5px;
    background-color: #fff;
    border-radius: 50%;
    cursor: pointer;
  }

  .slideshow-dots1 .dot1.active {
    background-color: #000;
  }
</style>

<script>
  var slideIndex = 0;
  var slides = document.querySelectorAll('.slide1');
  var dots = document.querySelectorAll('.dot1');
  var autoSlideTimeout;

  function showSlide(index) {
    slides.forEach(function(slide) {
      slide.style.display = 'none';
    });
    dots.forEach(function(dot) {
      dot.classList.remove('active');
    });

    slideIndex = index;
    slides[slideIndex - 1].style.display = 'block';
    dots[slideIndex - 1].classList.add('active');
  }

  function showSlides() {
    slideIndex++;
    if (slideIndex > slides.length) {
      slideIndex = 1;
    }
    showSlide(slideIndex);
    autoSlideTimeout = setTimeout(showSlides, 5000);
  }

  dots.forEach(function(dot, index) {
    dot.addEventListener('click', function() {
      clearTimeout(autoSlideTimeout);
      showSlide(index + 1);
    });
  });

  document.querySelector('.slideshow-container1').addEventListener('mouseenter', function() {
    clearTimeout(autoSlideTimeout);
  });

  document.querySelector('.slideshow-container1').addEventListener('mouseleave', function() {
    autoSlideTimeout = setTimeout(showSlides, 5000);
  });

  showSlide(1);
  autoSlideTimeout = setTimeout(showSlides, 5000);
</script>

